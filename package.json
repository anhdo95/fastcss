{
  "name": "postcss",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all -s build serve",
    "dev": "npm-run-all -p watch serve",
    "serve": "serve -p 3003",
    "build": "yarn compile && yarn lint && postcss compile/main.css -o dist/main.min.css",
    "watch": "npm-run-all -p \"compile:watch\" \"postcss:watch\"",
    "postcss": "postcss compile/main.css -o dist/main.min.css",
    "postcss:watch": "yarn postcss -w",
    "compile": "node-sass src/main.scss compile/main.css",
    "compile:watch": "yarn compile -w",
    "lint": "stylelint \"src/**/*.scss\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "cssnano": "^5.1.12",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-modules": "^4.3.1",
    "postcss-preset-env": "^7.7.1",
    "serve": "^13.0.2",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard-scss": "^4.0.0"
  }
}
